{
  "compilerOptions": {
    "composite": true, // <-- OBBLIGATORIO: Abilita i project references
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // <-- OBBLIGATORIO: Deve essere 'false' per permettere la build
    "jsx": "react-jsx",
    "declaration": true, // <-- OBBLIGATORIO: Abilita la generazione dei file .d.ts
    "declarationMap": true,
    "sourceMap": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"] // Questo file si occupa di tutto il codice in 'src'
}